<title>
    Create Post
</title>

    <head>
    <style>
    table,th,td
    {
    border:1px solid black;
    border-collapse:collapse;
    }
    th,td
    {
    padding:5px;
    }
    </style>
    </head>

<body>
    <!-- If there are no vehicles listed yet, show the login. Hide it when we have vehicles to show -->
    {{^vehicles}}
    <form name="login" action="/users/add/post" method="post">
    Login (email): <input type="text" name="login" autofocus required>
                   <input type="submit" value="Login">
    </form>
    {{/vehicles}}


    <!-- If we have the user ID, then show this form to create the post -->
    {{#userId}}
        <h2>Create your post: </h2><br>
        Select your vehicle: 
        <br>
    {{#vehicles}}
        <form name="post" action="/posts" method="post">
            <input type="radio" name="vehicle" value="{{id}}" required> {{name}}
            <br>
    {{/vehicles}}
            <br>
            <input type="hidden" name="userId" value="{{userId}}">
            Price:
            <input type="number" name="price" min="0" required>
            <br>
            <br>
            Description: 
            <br>
            <textarea name="description" style="width:250px;height:150px;"></textarea>
            <input type="submit" value="Post">
        </form>
    {{/userId}}
    <br>
    <a href="http://localhost:4567/">Carsapp</a>
</body>
