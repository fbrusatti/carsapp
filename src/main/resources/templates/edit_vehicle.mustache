<a href="/"> Inicio </a><br>
<form action="/v/{{vehicle}}{{id}}/edit" method="post">
	{{#vehicle}}
		<b>Marca: </b><input type="text" value="{{brand}}" name="brand" size="20" required/><br>
		<b>Modelo: </b><input type="text" value="{{model}}" name="model" size="20" required/><br>
	    	<b>Año: </b><input type="text" pattern="[0-9]{4}" value="{{year}}" name="year" size="4" required/><br>
	    	<b>Color: </b><input type="color" value="{{color}}" name="color" size="10" required/><br>
		<b>Dueño: </b><input type="text" value="{{user_id}}" name="user_id" size="20" required/><br>
		<b>Seleccione un tipo: </b><select name="type" onchange="toggle_vehicleType(this)">

		<option value="1">Auto</option>
		<option value="2">Motocicleta</option>
		<option value="3">Camión</option>
	</select><br>
		<span id="span_car" style="display:inline">
			{{#car}}
			<b>Cantidad de asientos: </b><input value="{{capacity}}" name="capacity" type="text" required><br>
			{{/car}}
		</span>
		<span id="span_motorcycle" style="display:inline">
			{{#motorcycle}}
				<b>Cilindrada: </b><input value="{{cylinderCapacity}}" name="cylinder_capacity" type="text" required><br>
			{{/motorcycle}}
		</span>
		<span id="span_truck" style="display:inline">
			{{#truck}}
			<b>Altura: </b><input  value="{{height}}" name="height" type="text"> required<br>
			<b>Longitud: </b><input value="{{length}}" name="length" type="text" required>< br>
			{{/truck}}
		</span>
	<input type="submit" value="Enviar"><input type="reset" value="Borrar">
	{{/vehicle}}
</form>

