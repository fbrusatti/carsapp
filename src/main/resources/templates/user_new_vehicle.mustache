<a href="/"> Inicio </a><br>
<form action="/users/{{id}}/newVehicle" method="post">
	<b>Marca: </b><input type="text" name="brand" size="20" required/><br>
    <b>Modelo: </b><input type="text" name="model" size="20" required/><br>
    <b>Año: </b><input type="text" pattern="[0-9]{4}" name="year" size="4" required/><br>
    <b>Color: </b><input type="color" name="color" size="10" required/><br>
	<b>Seleccione un tipo: </b><select name="type" onchange="toggle_vehicleType(this)">
		<option value="1">Auto</option>
		<option value="2">Motocicleta</option>
		<option value="3">Camión</option>
	</select><br>
	<span id="span_car" style="display:inline">
		<b>Cantidad de asientos: </b><input name="capacity" type="text" required><br>
	</span>
	<span id="span_motorcycle" style="display:none">
		<b>Cilindradas: </b><input name="cylinder_capacity" type="text"><br>
	</span>
	<span id="span_truck" style="display:none">
		<b>Altura: </b><input name="height" type="text"><br>
		<b>Longitud: </b><input name="length" type="text"><br>
	</span>
	<input type="submit" value="Enviar"><input type="reset" value="Borrar">
</form>

