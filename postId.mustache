<head>
<h1>Post</h1>
    
    <h2>Vehicle: {{vehicle_name}}</h2>

</head>
    <body> 
        <table style type="text/css">
            {{#post}}
                {{#vehicle}}
                <tr>
                    <td> Model </td>
                    <td>{{model}}</td>
                </tr>
                <tr>
                    <td> Km </td>
                    <td>{{km}}</td>
                </tr>
                {{/vehicle}}

                <tr>
                    <td> Descripcion </td>
                    <td>{{description}}</td>
                </tr>
                <tr>
                    <td> Price </td>
                    <td>$ {{price}}</td>
                </tr>
                {{#user}}
                <tr>
                    <td> User </td>
                    <td>{{name}}</td>
                </tr>
                {{/user}}
        </style>
        </table>
        <br>
        {{#rating}}
            Post rating: {{rating}} stars.
        {{/rating}}
        {{^rating}}
            Post rating: not rated.
        {{/rating}}
        <br>
        {{#questions}}
            {{#user}}
            User: <font color = "blue">{{name}}</font><br>
            {{/user}}
            {{description}}<br>
            {{#answer}}
            <font color = "red">Answer: </font>{{description}}<br>
            {{/answer}}
            <br>

            {{#active}}
                <form action="/posts/answer" method="post">
                    <input type="hidden" name="questionId" value="{{id}}">
                    Login:
                    <input type="email" name="login">
                    <input type="submit" value="Answer">
                </form>
            {{/active}}

        {{/questions}}
        <br>
        <form action="/questions" method="post">
            <input type="hidden" name="postId" value="{{id}}">
            Your Question:<br>
            <textarea name="description" style="width:377px;height:50px;"></textarea><br>
            Login (user email):
            <input type="email" name="user">
            <input type="submit" value="Post">
        </form>

        <!-- Rating -->
        <form  action="/posts/rate" method="post" >
            <input type="hidden" name="postId" value="{{id}}">

            <span class="star-rating">
                <input type="radio" name="rating" value="1"><i></i>
                <input type="radio" name="rating" value="2"><i></i>
                <input type="radio" name="rating" value="3"><i></i>
                <input type="radio" name="rating" value="4"><i></i>
                <input type="radio" name="rating" value="5"><i></i>
            </span>

            <input type="email" name="login">
            <input type="submit" value="Rate">
        </form>

        {{/post}}
        <br>
        <a href="http://localhost:4567/">Carsapp</a>
    </body>

<style>
    table,th,td
    {
    border:1px solid black;
    border-collapse:collapse;
    }
    th,td
    {
    padding:5px;
    }

    .star-rating {
      font-size: 0;
      white-space: nowrap;
      display: inline-block;
      width: 125px;
      height: 25px;
      overflow: hidden;
      position: relative;
      background: url('data:image/svg+xml;base64,');
      background-size: contain;
    }
    .star-rating i {
      opacity: 0;
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 20%;
      z-index: 1;
      background: url('data:image/svg+xml;base64,');
      background-size: contain;
    }
    .star-rating input {
      -moz-appearance: none;
      -webkit-appearance: none;
      opacity: 0;
      display: inline-block;
      width: 20%;
      height: 100%;
      margin: 0;
      padding: 0;
      z-index: 2;
      position: relative;
    }
    .star-rating input:hover + i,
    .star-rating input:checked + i {
      opacity: 1;
    }
    .star-rating i ~ i {
      width: 40%;
    }
    .star-rating i ~ i ~ i {
      width: 60%;
    }
    .star-rating i ~ i ~ i ~ i {
      width: 80%;
    }
    .star-rating i ~ i ~ i ~ i ~ i {
      width: 100%;
    }

</style>